# Define que este é o arquivo raiz de configuração
root = true

# Regras padrão para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Regras específicas para Markdown (mantém espaços)
[*.md]
trim_trailing_whitespace = false
